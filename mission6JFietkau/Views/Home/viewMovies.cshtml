@* view movies here. make a for loop to display data about each *@
@model IEnumerable<mission6JFietkau.Models.Movie>

<h1>Movie Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.category</td>
                <td>@movie.title</td>
                <td>@movie.year</td>
                <td>@movie.director</td>
                <td>@movie.rating</td>
                <td>@movie.edited</td>
                <td>@movie.lent_to</td>
                <td>@movie.notes</td>
            </tr>
        }
    </tbody>
</table>

