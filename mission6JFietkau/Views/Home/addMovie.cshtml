@model Movie

<div>
    <h1>Movie Addition Form</h1>
    <p> Fill out the information about the movie to add it to Joel's collection'</p>
</div>
<div>

    <form asp-action="addMovie">


        @if (Model.MovieId > 0)
        {
            <input type="hidden" asp-for="MovieId" />
        }
         
        <label asp-for="CategoryId">Category<span class="text-danger">*</span></label>
        <select asp-for="CategoryId" >Category
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
@*         <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))"></select>
 *@
        <br />
        <label asp-for="Title">Title<span class="text-danger">*</span></label>
        <input type="text" asp-for="Title" required />
        <br />
        <label asp-for="Year">Year<span class="text-danger">*</span></label>
        <input type="number" asp-for="Year" required />
        <Br />
        <label asp-for="Director">Director<span class="text-danger">*</span></label>
        <input type="text" asp-for="Director" required />
        <br />
        <label asp-for="Rating">Rating<span class="text-danger">*</span></label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>    
        <br />
        <label asp-for="CopiedToPlex">Copied To Plex?</label>
        <select asp-for="CopiedToPlex">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent to</label>
        <input type="text" asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes</label>
        <input type="text" asp-for="Notes" maxlength="25" />
        <br />
        <button type="submit">Submit</button>

    </form>







</div>


